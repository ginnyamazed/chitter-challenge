<div class="card text-center" style="background-color: #e3f2fd; color: steelblue">
  <div class="card-body">
    <h2>Log In</h2>

    <%= form_with url: login_path do |f| %>

      <div class="mb-3">
        <%= f.label :username, class: "col-md-4 control-label"%>
        <div class="mb-3">
          <%= f.text_field :username, class: "form-control" %>
        </div>
      </div>
      <div class="mb-3">
        <%= f.label :password, class: "col-md-4 control-label" %>
        <div class="mb-3">
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>

      <div class="d-grid gap-2">
        <%= f.submit "Login", width: 100, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>