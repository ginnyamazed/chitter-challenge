<div class="card text-center" style="background-color: #e3f2fd; color: steelblue">
  <div class="card-body">

    <%= form_with(model: quack) do |form| %>
      <% if form.object.errors.any? %>
        <div class="alert alert-danger">
          <% form.object.errors.full_messages.each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>
      <% end %>
      <% if Current.user %>

        <%= form.hidden_field :user_id, value: Current.user.id %>
        <% end %>
      <div class="mb-3">
        <%= form.label :content %><br>

        <%= form.text_area :content, rows: 6, cols:40 %>
      </div>

      <div class="mb-3">
        <%= form.label :tagged_users %><br>
        <%= form.text_area :tagged_users, cols: 30 %>
      </div>

      <div class="mb-3">
        <%= form.submit class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
